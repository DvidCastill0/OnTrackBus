<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DC000D57"
    tools:context=".verInformacionDeCanal">

    <TextView
        android:id="@+id/tv_CanalAbierto"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_ovalo_confondoblanco"
        android:gravity="center"
        android:text="231"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Reportes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edt_ovalo_fondoblanco_sinaltura"
        android:padding="7dp"
        android:text="Â¡Reportes!"
        android:textColor="#770808"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/tv_CanalAbierto"
        app:layout_constraintTop_toBottomOf="@+id/tv_CanalAbierto" />

    <TextView
        android:id="@+id/tv_TarifaCanalAbierto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edt_ovalo_fondoblanco_sinaltura"
        android:padding="7dp"
        android:text="Tarifa: $9.50"
        android:textColor="#A3000000"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_CanalAbierto"
        app:layout_constraintTop_toBottomOf="@+id/tv_CanalAbierto" />

    <ListView
        android:id="@+id/lv_ReportesCanalesAbiertos"
        android:layout_width="370dp"
        android:layout_height="400dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tv_CanalAbierto"
        app:layout_constraintTop_toBottomOf="@+id/tv_Reportes" />

    <Button
        android:id="@+id/btn_AceptarCanalAbierto"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_ovalo_confondoblanco"
        android:text="Aceptar"
        android:textColor="#009688"
        app:layout_constraintEnd_toEndOf="@+id/lv_ReportesCanalesAbiertos"
        app:layout_constraintTop_toBottomOf="@+id/lv_ReportesCanalesAbiertos" />

    <TextView
        android:id="@+id/tv_Sugerencias"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btn_ovalo_sinfondo"
        android:padding="10dp"
        android:text="Sugerencias"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/lv_ReportesCanalesAbiertos"
        app:layout_constraintTop_toBottomOf="@+id/lv_ReportesCanalesAbiertos" />
</androidx.constraintlayout.widget.ConstraintLayout>