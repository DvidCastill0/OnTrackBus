<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="OnTrackBus.com">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".pasadorSpinner"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.abordado"
            ></activity>
        <activity
            android:name=".ventana_EmergenteAyuda"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.ReporteVentanaemergente" />
        <activity
            android:name=".ventanaEmergenteSugerencias"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.ReporteVentanaemergente" />
        <activity
            android:name=".ReportarRuta"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.BuscarRuta" />
        <activity
            android:name=".verInformacionDeCanal"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.BuscarRuta" />
        <activity
            android:name=".Ventana_Emergente_EntrarACanal"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.ReporteVentanaemergente" />
        <activity
            android:name=".Ventana_Emergente_Contacto_De_Confianza_Reporte"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.ReporteVentanaemergente" />
        <activity
            android:name=".BuscarOtraRutaVentanaEmergente"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.BuscarRuta" />
        <activity
            android:name=".notificacionPantallaBloqueo"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme.abordado" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/maps_key" />

        <activity
            android:name=".MenuUsuario"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>